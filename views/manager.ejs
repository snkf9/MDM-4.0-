<div class="modal" tabindex="-1" id="action_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            
            <form method="post" url="http://localhost:3000/manager/addUser" body="userJson" id="sample_form" >
                <div class="modal-header" id="dynamic_modal_title">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" >
                    <div class="mb-3">
                        <label class="form-label">Tên nhân viên</label>
                        <input type="text" name="name"  id="name" class="form-control" />
                    </div>
                    <div class="mb-3" >
                        <label class="form-label">Mã nhân viên</label>
                        <input type="text" name="svn_id" id="svn_id" class="form-control" />
                    </div>
                    <div class="mb-3" >
                        <label class="form-label">Phòng</label>
                        <select id="dept" name="dept" class="form-control">
                            <option value="IQPC">IQPC</option>
                            <option value="QA">QA</option>
                        </select>
                    </div>
                    <div class="mb-3" >
                        <label class="form-label">Nhà máy</label>
                        <select  id="factory" name="factory" class="form-control">
                            <option value="SVN2">SVN2</option>
                            <option value="SVN3">SVN3</option>
                        </select>
                    </div>
                    <div class="mb-3" >
                        <label class="form-label">Cấp độ</label>
                        <select id="level_user" name="level_user" class="form-control">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                        </select>
                    </div>
                    <div class="mb-3" >
                        <label class="form-label">Mật khẩu</label>
                        <input type="password"   id="passw" name="passw" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="id" id="id" />
                    <input type="hidden" name="action" id="action" value="Add" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="action_button" >Add</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    

    $(document).ready(function(){
    
        load_data();
    
        function load_data()
        {
            $.ajax({
                url:"http://localhost:3000/manager/action",
                method:"POST",
                data:{action:'getAll'},
                dataType : "JSON",
                success:function(data){
                    
                
                {
                    var html = '';
                    
    
                    if(data.data.recordset.length > 0)
                    {
                        for(var count = 0; count < data.data.recordset.length; count++)
                        {
                            
                            html += `
                            <tr>
                                <td>`+data.data.recordset[count].Name+`</td>
                                <td>`+data.data.recordset[count].SVN_Id+`</td>                                           
                                <td>`+data.data.recordset[count].Dept+`</td>
                                <td>`+data.data.recordset[count].Factory+`</td>
                                <td>`+data.data.recordset[count].Level_user+`</td>
                                <td><button type="button" class="btn btn-warning btn-sm edit" data-id="`+data.data.recordset[count].Id+`">Edit</button>&nbsp;<button type="button" class="btn btn-danger btn-sm delete" data-id="`+data.data.recordset[count].Id+`">Delete</button></td>
                            
                            </tr>
                            `;
                        }
                        
                    }
    
                    $('#user_table tbody').html(html);
                    
                    }

                }
            });
        }
        $('#add_data').click(function(){

        $('#dynamic_modal_title').text('Add User');

        $('#sample_form')[0].reset();

        $('#action').val('addUser');

        $('#action_button').text('Add');

        $('#action_modal').modal('show');

        });

        $('#sample_form').on('submit', function(event){

        event.preventDefault();

        $.ajax({
            url:"http://localhost:3000/manager/action",
            method:"POST",
            data:$('#sample_form').serialize(),
            dataType:"JSON",
            beforeSend:function(){
                $('#action_button').attr('disabled', 'disabled');
            },
            success:function(data)
            {
                $('#action_button').attr('disabled', false);

                $('#message').html('<div class="alert alert-success">'+data.message+'</div>');

                $('#action_modal').modal('hide');

                load_data();

                setTimeout(function(){
                    $('#message').html('');
                }, 5000);
            }
        });

        });

        $(document).on('click', '.edit', function(){

            var id = $(this).data('id');
            

            $('#dynamic_modal_title').text('Edit Data');

            $('#action').val('editUser');

            $('#action_button').text('Edit');

            $('#action_modal').modal('show');

            $.ajax({
                url:"http://localhost:3000/manager/action",
                method:"POST",
                data:{id:id, action:'getOneUser'},
                dataType:"JSON",
                success :function(data)
                {
                    
                    $('#svn_id').val(data.SVN_Id);
                    $('#name').val(data.Name);
                    $('#dept').val(data.Dept);
                    $('#level_user').val(data.Level_user);
                    $('#factory').val(data.Factory);
                    $('#passw').val(data.Passw);
                    $('#id').val(id);
                }
            });

            });

            $(document).on('click', '.delete', function(){

                var id = $(this).data('id');

                if(confirm("Are you sure you want to delete this data?"))
                {
                    $.ajax({
                        url:"http://localhost:3000/manager/action",
                        method:"POST",
                        data:{action:'deleteUser', id:id},
                        dataType:"JSON",
                        success:function(data)
                        {
                            $('#message').html('<div class="alert alert-success">'+data.message+'</div>');
                            load_data();
                            setTimeout(function(){
                                $('#message').html('');
                            }, 5000);
                        }
                    });
                }

                });

        })


        




    
</script>
