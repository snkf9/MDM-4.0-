<div class="modal" tabindex="-1" id="partdata_action_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" url="http://localhost:3000/partData/addPart" body="partDataJson" id="partdata_form">
                <div class="modal-header" id="partdata_dynamic_modal_title">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>    
                </div>
                <div class="modal-body" >
                    <div class="mb-3">
                        <label class="form-label">Mold No</label>
                        <input type="text" name="mold_no"  id="mold_no" class="form-control" />
                    </div>

