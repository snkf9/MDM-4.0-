<script>

    const ip_pc = "http://192.168.1.155:3000";
    $(document).ready(function(){
        
        load_datapart();

        function load_datapart()
        {
            $.ajax({
                // url:"http://localhost:3000/partData/actionPart",
                url: ip_pc + "/partData/actionPart",
                method:"POST",
                data:{actionPart:'getAllPart'},
                dataType : "JSON",
                success:function(data){
                    
                
                {
                    var html = '';
                    

                    if(data.data.recordset.length > 0)
                    {
                        
                        for(var count = 0; count < data.data.recordset.length; count++)
                        {
                            
                            html += `
                            <tr>
                                
                                <td>`+data.data.recordset[count].Mold_No+`</td>
                                <td>`+data.data.recordset[count].Name_part+`</td>                                           
                                <td>`+data.data.recordset[count].Part_no+`</td>
                                <td>`+data.data.recordset[count].Dia_no+`</td>
                                <td>`+data.data.recordset[count].Factory+`</td>
                                <td>`+data.data.recordset[count].Add_date+`</td>
                                <td><button type="button" class="btn btn-warning btn-sm edit" data-id="`+data.data.recordset[count].Part_Id+`">Edit</button>&nbsp;<button type="button" class="btn btn-danger btn-sm delete" data-id="`+data.data.recordset[count].Part_Id+`">Delete</button>&nbsp;<form method="get" action="/partData/PartChild" ><button type="submit" class="btn btn-success btn-sm open" >Open</button><input type="hidden"name="partId" value="`+data.data.recordset[count].Part_Id+`"></form></td>
                            
                            </tr>
                            `;
                        }
                        
                    }

                    $('#part_data_table tbody').html(html);
                    
                    }

                }
            });
        }
        
        $('#add_partdata').click(function(){  
            

            $('#partdata_dynamic_modal_title').text('Add Part');

            $('#partdata_form')[0].reset();

            $('#actionPart').val('addPart');

            $('#action_buttonpartdata').text('addPart');

            $('#partdata_action_modal').modal('show');


        });

        $('#partdata_form').on('submit', function(event){

            event.preventDefault();
            var curDate = new Date();
            var curMonth = curDate.getMonth() + 1;
            var curDay = curDate.getDate() + '/' + curMonth + '/' + curDate.getFullYear() ;
            $('#add_date').val(curDay);

            

            $.ajax({
                // url:"http://localhost:3000/partData/actionPart",
                url: ip_pc + "/partData/actionPart",
                method:"POST",
                data:$('#partdata_form').serialize(),
                dataType:"JSON",
                beforeSend:function(){
                    $('#action_buttonpartdata').attr('disabled', 'disabled');
                },
                success:function(data)
                {

                    $('#action_buttonpartdata').attr('disabled', false);

                    $('#message_part').html('<div class="alert alert-success">'+data.message+'</div>');

                    $('#partdata_action_modal').modal('hide');

                    load_datapart();

                    setTimeout(function(){
                        $('#message_part').html('');
                    }, 5000);
                }
            });

            });
            $(document).on('click', '.edit', function(){
                var id = $(this).data('id');

                

                $('#partdata_dynamic_modal_title').text('Edit Part');

                $('#actionPart').val('editPart');

                $('#action_buttonpartdata').text('EditPart');

                $('#partdata_action_modal').modal('show');

                $.ajax({
                    // url:"http://localhost:3000/partData/actionPart",
                    url: ip_pc + "/partData/actionPart",
                    method:"POST",
                    data:{id:id, actionPart:'getOnePart'},
                    dataType:"JSON",
                    success :function(data)
                    {
                        
                        $('#mold_no').val(data.Mold_No);
                        $('#name_part').val(data.Name_part);
                        $('#part_no').val(data.Part_no);
                        $('#factory_p').val(data.Factory);
                        $('#dia_no').val(data.Dia_no);
                        
                        $('#id').val(id);
                    }
                });

                });
                $(document).on('click', '.delete', function(){

                    var id = $(this).data('id');

                    if(confirm("Are you sure you want to delete this data?"))
                    {
                        $.ajax({
                            // url:"http://localhost:3000/partData/actionPart",
                            url: ip_pc + "/partData/actionPart",
                            method:"POST",
                            data:{actionPart:'deletePart', id:id},
                            dataType:"JSON",
                            success:function(data)
                            {
                                $('#message_part').html('<div class="alert alert-success">'+data.message+'</div>');
                                load_datapart();
                                setTimeout(function(){
                                    $('#message_part').html('');
                                }, 5000);
                            }
                        });
                    }

                    });

                $(document).on('click', '.open', function(){
                    var id = $(this).data('id');
                    console.log(id);
                    $.ajax({
                        path:"partData/PartChild/:id",
                        method:"get",
                        data:{id:id},
                        dataType:"JSON",
                    })
                    

                }) ;



               
    })
</script>