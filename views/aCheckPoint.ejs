<script>
   $('#checkbox-value').text($('#checkbox1').val());

    $("#checkbox1").on('change', function() {
    if ($(this).is(':checked')) {
        $(this).attr('value', 'true');
    } else {
        $(this).attr('value', 'false');
    }
    
    $('#checkbox-value').text($('#checkbox1').val());
    });
        
    $(document).ready(function(){
        // var id = window.location.pathname.slice(10);
        const urlValue= window.location.search;
        const urlParams = new URLSearchParams(urlValue);
        const id = urlParams.get('partId');

        $('#pc_sc').val(id);
        $('#pc_sc1').val(id);
        $('#pc_sc2').val(id);
        $('#pc_sc3').val(id);
        $('#partid').val(id);
        $('#id').val(id);
        
        load_datapart_child();
        function load_datapart_child()
        {
           
            $.ajax({
                url:  "http://localhost:3000" + window.location.pathname+ "/actionac",

                method:"POST",
                data:{actionpc:'getAllPart'},
                dataType : "JSON",
                success:function(data){
                    
                
                
                    var html = '';
                    for(var count = 0; count < data.data.recordset.length; count++)
                    {    
                            html += `
                            <tr>
                                <td><button type="button" class="btn btn-warning btn-sm edit" data-id="`+data.data.recordset[count].Id+`">Edit</button>&nbsp;<button type="button" class="btn btn-danger btn-sm delete" data-id="`+data.data.recordset[count].Id+`">Delete</button>
                                <td>`+data.data.recordset[count].Item_No+`</td>
                                <td>`+data.data.recordset[count].Check_content+`</td>
                                <td>`+data.data.recordset[count].Specs+`</td>                                           
                                <td>`+data.data.recordset[count].Tool+`</td>
                                <td>`+data.data.recordset[count].Eng+`</td>
                                <td>`+data.data.recordset[count].Sp_Jig+`</td>
                                <td>`+data.data.recordset[count].QA+`</td>
                                <td>`+data.data.recordset[count].QA_Sample_size+`</td>
                                <td>`+data.data.recordset[count].QA_Frequence+`</td>
                                <td>`+data.data.recordset[count].IQPC+`</td>
                                <td>`+data.data.recordset[count].IQPC_Sample_size+`</td>
                                <td>`+data.data.recordset[count].IQPC_Frequence+`</td>
                                <td>`+data.data.recordset[count].OQC+`</td>
                                <td>`+data.data.recordset[count].OQC_Sample_size+`</td>
                                <td>`+data.data.recordset[count].OQC_Frequence+`</td>
                            </tr>
                            `;

                    $('#part_data_child_table_1 tbody').html(html);
                }
            
              
                }
            });
        }
        $('#add_partdata').click(function(){  
            
            

            $('#partdata_dynamic_modal_title').text('Add Part');

            $('#partdata_form')[0].reset();

            $('#actionac').val('addPart');

            $('#action_buttonpartdata').text('addPart');

            $('#partchild_action_modal').modal('show');


        });

        $('#partdata_form').on('submit', function(event){

            event.preventDefault();
            // var curDate = new Date();
            // var curDay = curDate.getDate() + '/' + curDate.getMonth() + 1 + '/' + curDate.getFullYear() ;
            // $('#add_date').val(curDay);
         

            $.ajax({
                url:"http://localhost:3000" + window.location.pathname+ "/actionac",
                method:"POST",
                data:$('#partdata_form').serialize(),
                dataType:"JSON",
                beforeSend:function(){
                    $('#action_buttonpartdata').attr('disabled', 'disabled');
                    
                },
                success:function(data)
                {

                    $('#action_buttonpartdata').attr('disabled', false);

                    $('#message_part').html('<div class="alert alert-success">'+data.message+'</div>');

                    $('#partchild_action_modal').modal('hide');

                    load_datapart_child();

                    setTimeout(function(){
                        $('#message_part').html('');
                    }, 5000);
                }
            });

            });
            $(document).on('click', '.edit', function(){
                var id = $(this).data('id');

                

                $('#partdata_dynamic_modal_title').text('Edit Part');

                $('#actionac').val('editPart');

                $('#action_buttonpartdata').text('EditPart');

                $('#partchild_action_modal').modal('show');

                $.ajax({
                    url:"http://localhost:3000" + window.location.pathname+ "/actionac",
                    method:"POST",
                    data:{id:id, actionac:'getOnePart'},
                    dataType:"JSON",
                    success :function(data)
                    {
                        
                        $('#mold_no').val(data.Mold_No);
                        $('#name_part').val(data.Name_part);
                        $('#part_no').val(data.Part_no);
                        $('#factory_p').val(data.Factory);
                        $('#dia_no').val(data.Dia_no);
                        
                        $('#id').val(id);
                    }
                });

                });
                $(document).on('click', '.delete', function(){

                    var id = $(this).data('id');

                    if(confirm("Are you sure you want to delete this data?"))
                    {
                        $.ajax({
                            url:"http://localhost:3000/partData/actionPart",
                            method:"POST",
                            data:{actionPart:'deletePart', id:id},
                            dataType:"JSON",
                            success:function(data)
                            {
                                $('#message_part').html('<div class="alert alert-success">'+data.message+'</div>');
                                load_datapart();
                                setTimeout(function(){
                                    $('#message_part').html('');
                                }, 5000);
                            }
                        });
                    }

                    });
    });



    

</script>