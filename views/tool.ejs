<div class="modal" tabindex="-1" id="tool_action_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            
            <form method="post" url="http://localhost:3000/tool/addTool" body="toolJson" id="tool_form" >
                <div class="modal-header" id="tool_dynamic_modal_title">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" >
                    <div class="mb-3">
                        <label class="form-label">Tool Name</label>
                        <input type="text" name="tool_name"  id="tool_name" class="form-control" />
                    </div>
                
                    <div class="mb-3" >
                        <label class="form-label">Tool type</label>
                        <select id="tooltype" name="tool_type" class="form-control">
                            <option value="Caliper">Caliper</option>
                            <option value="Micrometer">Micrometer</option>
                            <option value="Height gauge ">Height gauge </option>
                        </select>
                    </div>
                    
                        <div class="mb-3">
                            <label class="form-label">U-WAVE-T</label>
                            <input type="text" name="u_wave_t"  id="u_wave_t" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">U-WAVE-R</label>
                            <input type="text" name="u_wave_r"  id="u_wave_r" class="form-control" />
                        </div>

                    <div class="mb-3" >
                        <label class="form-label">Factory No</label>
                        <select  id="factory_t" name="factory_t" class="form-control">
                            <option value="SVN2">SVN2</option>
                            <option value="SVN3">SVN3</option>
                        </select>
                    </div>

                </div>

                <div class="modal-footer">
                    <input type="hidden" name="id" id="id" />
                    <input type="hidden" name="actionTool" id="actionTool" value="Add" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="action_buttontool" >Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    $(document).ready(function(){
        
        load_datatool();

        function load_datatool()
        {
            $.ajax({
                url:"http://localhost:3000/tool/actionTool",
                method:"POST",
                data:{actionTool:'getAllTool'},
                dataType : "JSON",
                success:function(data){
                    
                
                {
                    var html = '';
                    

                    if(data.data.recordset.length > 0)
                    {
                        for(var count = 0; count < data.data.recordset.length; count++)
                        {
                            
                            html += `
                            <tr>
                                <td>`+data.data.recordset[count].Name_t+`</td>
                                <td>`+data.data.recordset[count].Type_t+`</td>                                           
                                <td>`+data.data.recordset[count].Id_Tool+`</td>
                                <td>`+data.data.recordset[count].uwave_r+`</td>
                                <td>`+data.data.recordset[count].Factory_t+`</td>
                                <td>`+data.data.recordset[count].InUse+`</td>
                                <td><button type="button" class="btn btn-warning btn-sm edit" data-id="`+data.data.recordset[count].Id+`">Edit</button>&nbsp;<button type="button" class="btn btn-danger btn-sm delete" data-id="`+data.data.recordset[count].Id+`">Delete</button></td>
                            
                            </tr>
                            `;
                        }
                        
                    }

                    $('#tool_table tbody').html(html);
                    
                    }

                }
            });
        }
        
        $('#add_tool').click(function(){  

            $('#tool_dynamic_modal_title').text('Add Tool');

            $('#tool_form')[0].reset();

            $('#actionTool').val('addTool');

            $('#action_buttontool').text('addTool');

            $('#tool_action_modal').modal('show');


        });

        $('#tool_form').on('submit', function(event){

            event.preventDefault();

            $.ajax({
                url:"http://localhost:3000/tool/actionTool",
                method:"POST",
                data:$('#tool_form').serialize(),
                dataType:"JSON",
                beforeSend:function(){
                    $('#action_buttontool').attr('disabled', 'disabled');
                },
                success:function(data)
                {
                    $('#action_buttontool').attr('disabled', false);

                    $('#message_tool').html('<div class="alert alert-success">'+data.message+'</div>');

                    $('#tool_action_modal').modal('hide');

                    load_datatool();

                    setTimeout(function(){
                        $('#message_tool').html('');
                    }, 5000);
                }
            });

            });
            $(document).on('click', '.edit', function(){

                var id = $(this).data('id');


                $('#tool_dynamic_modal_title').text('Edit Tool');

                $('#actionTool').val('editTool');

                $('#action_buttontool').text('EditTool');

                $('#tool_action_modal').modal('show');

                $.ajax({
                    url:"http://localhost:3000/tool/actionTool",
                    method:"POST",
                    data:{id:id, actionTool:'getOneTool'},
                    dataType:"JSON",
                    success :function(data)
                    {
                        
                        $('#tool_name').val(data.Name_t);
                        $('#tool_type').val(data.Type_t);
                        $('#u_wave_t').val(data.Id_Tool);
                        $('#factory_t').val(data.Factory_t);
                        $('#u_wave_r').val(data.uwave_r);
                        $('#id').val(id);
                    }
                });

                });
                $(document).on('click', '.delete', function(){

                    var id = $(this).data('id');

                    if(confirm("Are you sure you want to delete this data?"))
                    {
                        $.ajax({
                            url:"http://localhost:3000/tool/actionTool",
                            method:"POST",
                            data:{actionTool:'deleteTool', id:id},
                            dataType:"JSON",
                            success:function(data)
                            {
                                $('#message_tool').html('<div class="alert alert-success">'+data.message+'</div>');
                                load_datatool();
                                setTimeout(function(){
                                    $('#message_tool').html('');
                                }, 5000);
                            }
                        });
                    }

                    });
    })
</script>